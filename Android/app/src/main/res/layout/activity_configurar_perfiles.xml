<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme= "@style/Theme.AppCompat.Light.DarkActionBar"
    tools:context=".ConfigurarPerfiles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoazul"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ConfiguraciÃ³n de perfiles"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/nombreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre"
            android:layout_marginTop="100px"/>

        <EditText
            android:id="@+id/azucarEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:digits="0123456789."
            android:inputType="number"
            android:hint="Azucar (Cantidad de cucharadas)" />

        <TextView
            android:id="@+id/textViewLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de perfiles"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="50px"
            android:textAlignment="center"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/listaDePerfiles"
                    android:layout_width="match_parent"
                    android:layout_height="435dp"
                    android:layout_marginTop="50px">

                </ListView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>